{% extends 'base.html.twig' %}

{% block title %}{{ users.alias }}{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>{{ users.alias }}</h1>
            </div>
            <div class="col-4">
                <div class="card h-100">
                    <img src="{{ asset('assets/uploads/profiles/' ~ users.image) }}" alt="" class="card-img-top">
                    <div class="card-body">
                        <p class="text text-muted">{{ users.description }}</p>
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <h3>Les productions de {{ users.alias }}</h3>
            </div>
            {% for media in medias %}
                {% include 'artist/_card_medias.html.twig'with {media: media} only %}
            {% endfor %}


            <div class="mt-3">
                {{ knp_pagination_render(medias) }}
            </div>


        </section>
    </main>
{% endblock %}


