{% extends 'base.html.twig' %}

{% block title %}Exposition sélectionnée{% endblock %}

{% block body %}
    <main class="container">

        <h1>Exposition sélectionnée</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Nom de l'exposition</th>
                <td>{{ exhibition.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ exhibition.description }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>
                    {% for exhibitionsImage in exhibition.exhibitionsImages %}

                        <img src="{{ asset('assets/uploads/exhibitions/' ~ exhibitionsImage.name) }}" alt="Image"
                             width="150">

                    {% endfor %}
                </td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-outline-secondary" href="{{ path('app_exhibitions_index') }}">Retour à la liste</a>

        <a class="btn btn-outline-secondary" href="{{ path('app_exhibitions_edit', {'id': exhibition.id}) }}">Modifier</a>

        {{ include('admin/exhibitions/_delete_form.html.twig') }}

    </main>
{% endblock %}
