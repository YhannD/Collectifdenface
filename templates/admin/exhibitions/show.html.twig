{% extends 'base.html.twig' %}

{% block title %}Liste des expositions{% endblock %}

{% block body %}
    <h1>Liste des expositions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exhibition.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ exhibition.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ exhibition.description }}</td>
            </tr>
            <tr>
            <th>Images</th>
                <td>
            {% for exhibitionsImage in exhibition.exhibitionsImages %}

                    <img src="{{ asset('assets/uploads/exhibitions/' ~ exhibitionsImage.name) }}" alt="Image" width="150">

            {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_exhibitions_index') }}">back to list</a>

    <a href="{{ path('app_exhibitions_edit', {'id': exhibition.id}) }}">edit</a>

    {{ include('admin/exhibitions/_delete_form.html.twig') }}
{% endblock %}
