{% extends 'base.html.twig' %}

{% block title %}Medias index{% endblock %}

{% block body %}
    <h1>Medias index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Auteur</th>
            <th>Name</th>
            <th>Description</th>
            <th>Cat√©gories</th>
            <th>Section</th>
            <th>Couverture</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for media in medias %}
            <tr>
                <td>{{ media.user.alias }}</td>
                <td>{{ media.name }}</td>
                <td>{{ media.description }}</td>
                <td>{{ media.categories }}</td>
                <td>{{ media.mediasSections.name }}</td>
                <td>{% if media.mediasImages[0].name is defined %}
                    <img src="{{ asset('assets/uploads/medias/' ~ media.mediasImages[0].name) }}" alt="Image" width="50"></td>
                {% else %}
                    <img src="{{ asset('assets/uploads/front/default.png') }}" alt="Image" width="50">
                {% endif %}
                <td>
                    <a href="{{ path('app_medias_show', {'id': media.id}) }}">show</a>
                    <a href="{{ path('app_medias_edit', {'id': media.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_medias_new') }}">Create new</a>
{% endblock %}
