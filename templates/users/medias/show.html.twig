{% extends 'base.html.twig' %}

{% block title %}Liste des médias{% endblock %}

{% block body %}
    <h1>Liste des médias</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ media.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ media.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ media.description }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>
                    {% for mediasImage in media.mediasImages %}

                        <img src="{{ asset('assets/uploads/medias/' ~ mediasImage.name) }}" alt="Image" width="150">

                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_medias_index') }}">back to list</a>

    <a href="{{ path('app_medias_edit', {'id': media.id}) }}">edit</a>

    {{ include('users/medias/_delete_form.html.twig') }}
{% endblock %}
