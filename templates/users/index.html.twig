{% extends 'users.html.twig' %}

{% block title %}Hello UsersController!{% endblock %}

{% block body %}
    <div class="container text-start">
        <div class="row">
            <div class="col">
                <h2>{{ app.user.alias }}</h2>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="grid">
            <div class="card">
                <img src="{{ asset('assets/uploads/profiles/' ~ app.user.image) }}" alt="Image" width="150">
                <div class="card-body">
{#                    <h5 class="card-title">{{ app.user.alias }}</h5>#}
                    <p class="text text-muted">{{ app.user.description}}</p>
                </div>
            </div>
        </div>
        <a href="{{ path('app_profile_edit') }}" class="btn btn-primary mt-3">Modifier mon profil</a>
    </div>
{% endblock %}
